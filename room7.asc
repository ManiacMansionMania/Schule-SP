function hMuelleimer_AnyClick()
{
	if (any_click_move(210, 325, eDirDown))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Leer.");
			Wait(20);
			player.FaceDirection(eDirDown);
			player.Say("Ganz schön sauber für eine Schule.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Ich bin doch kein Müllmann.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Soll ich ihn mir etwa aufsetzen?");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Der ist doch schon offen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Der hat keinen Deckel zum Schließen.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Das würde den Mülleimer nur umwerfen.");
		}
		else if (UsedAction(eActUseInventory))
		{
			player.Say("Ich will das nicht wegwerfen.");
		}
		else Unhandled();
	}
}

