function hNachRechts_AnyClick()
{
	if (any_click_move(320, 330, eDirRight))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			EnterRoom(8, 0, 130, eDirRight);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			Unhandled();
		}
		else Unhandled();
	}
}

function hStadt_AnyClick()
{
	if (any_click_move(0, 330, eDirLeft))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			// Klaus's Zimmer
			EnterRoom(Door[eDoorNumKlaus].l_NewRoom, Door[eDoorNumKlaus].i_NewXPosition, Door[eDoorNumKlaus].i_NewYPosition, Door[eDoorNumKlaus].l_NewDirection);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Hier geht es in die Stadt.");
		}
		else Unhandled();
	}
}
