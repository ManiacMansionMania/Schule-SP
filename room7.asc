function hFlaggenmast_AnyClick()
{
	if (any_click_move(250, 325, eDirDown))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			int y = 200;
			
			Wait(5);
			StartCutscene(eSkipESCOrRightButton);
		  PlayMusic(20);
		  gAction.Visible = false;
		  gMaingui.Visible = false;
		  //gDialogsgui.Visible = true;
			
			while( y > 50 )
			{
			  y -= FLAGGENMAST_SPEED_UP;
			  SetViewport(0, y);
			  Wait(1);
			}
		
			Wait(220);
			PlayMusic(14);
			
			while ( y < 200 )
			{
			  y += FLAGGENMAST_SPEED_DOWN;
			  SetViewport(0, y);
			  Wait(1);
			}
		
		  gAction.Visible = true;
		  gMaingui.Visible = true;
		  //gDialogsgui.Visible = false;
			EndCutscene();
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Ich habe schon einen großen Mast in meiner Hose.");
			Wait(20);
			player.FaceDirection(eDirDown);
			player.Say("He! He! He!");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Soll ich etwa daran hochklettern?");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Der Mast lässt sich nicht öffnen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Der Mast lässt sich nicht schließen.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Das bringt mir nichts.");
		}
		else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Das will ich nicht hissen.");
		}
		else Unhandled();
	}
}


