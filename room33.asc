/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hGang_AnyClick()
{
	if (any_click_move(0, 130, eDirLeft))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			EnterRoom(32, 519, 135, eDirLeft);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Da geht es den Gang entlang.");
		}
		else Unhandled();
	}
}


