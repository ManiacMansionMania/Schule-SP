function hTShirt_AnyClick()
{
	if (any_click_move(275, 100, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Auf dem T-Shirt steht:");
			player.Say("\"Ich habe den Schwertmeister von Melée Island besiegt ...");
			player.Say("... und alles was ich bekommen habe, war dieses lausige T-Shirt!\"");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			if(b_SchrankOffen)
