/****************************
*   Hotspot-Funktionen
****************************/
function hFenster_AnyClick()
{
	if (any_click_move(GetViewportX() + mouse.x, 125, eDirRight))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Schönes Wetter da draußen.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das Fenster ist dermaßen im Rahmen befestigt, dass ich es nicht herausbekomme.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Das bringt nichts.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Es klemmt.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Das ist doch schon zu.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Ziehen und Zerren hilft da nichts.");
		}
		else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Damit bekomme ich es auch nicht auf.");
		}
		else Unhandled();
	}
}

