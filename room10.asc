function room_Load()
{
	//oTuer.init_object(Door[0].i_GlobalInt);
	Door[0].Init(oTuer, hTuer);
	// Bild für Erdgeschoß
	GraphicImage = TranslateNumber("_floor_number_ground_ 755");
	
