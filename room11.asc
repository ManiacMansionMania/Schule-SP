function hQuergang_AnyClick()
{
	if (any_click_move(190, 85, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			player.ChangeRoom(10, 205, 110, eDirectionDown);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Da geht es nach draußen.");
		}
		else Unhandled();
	}
}

