		{
			Wait(5);
			player.Say("Es bewegt sich keinen Millimeter.");
		}
		else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Damit bekomme ich ihn auch nicht auf.");
		}
		else Unhandled();
	}
}

