			PlaySound(2);
			oSchrank.Visible = true;
			Wait(50);
			player.Say("Aha, Medikamente.");
			Wait(20);
			PlaySound(3);
			oSchrank.Visible = false;
		}
		else if (UsedAction(eActClose) || UsedAction(eActPush))
		{
			Wait(5);
