/****************************
*   Raum-Funktionen
****************************/
function room_FirstLoad()
{
	oGlasscheibe.Visible = false;
	oTuer.Clickable = false;

	StartCutscene(eSkipESCOrRightButton);
	gAction.Visible = false;
	gMaingui.Visible = false;
	Wait(20);
	player.Say("Das ist die Schulkantine.");
	Wait(20);
	player.Say("Unsere Küchenhilfe ist krank und bis sie wieder auf den Beinen ist, hilft Charlie aus.");
	Wait(20);
	player.Say("Um genau zu sein, gibt es bis jetzt noch keine Charaktergrafiken für die Küchenhilfe, also wird Charlie wohl noch lange aushelfen müssen.");
	gAction.Visible = true;
	gMaingui.Visible = true;
	EndCutscene();
}

function room_Load()
{
	Door[eDoorNumKantine].Init(oTuer, hTuer);
	oGlasscheibe.Transparency = 50;
	//oTuer.init_object(20);
}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hTuer_AnyClick()
{
	if (any_click_move(285, 110, eDirRight))
	{
		if (UsedAction(eActUseInventory))
		{
			Wait(5);
			if ( player.ActiveInventory == iSchluesselKlasse || player.ActiveInventory == iSchluesselTrophy )
			{
			  player.Say("Dieser Schlüssel passt nicht.");
			}
			else
			{
			  player.Say("Sieht das etwa wie ein Schlüssel aus?");
			}
		}
		//else if ( any_click_on_door (20, oTuer, 285, 110, eDirRight, gr_SchulgangErdgeschoss2, 80, 130, eDirRight) )
		else if ( Door[eDoorNumKantine].Click() )
		{
		}
		else Unhandled();
	}
}


